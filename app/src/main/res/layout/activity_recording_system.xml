<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    tools:context=".ui.RecordingSystemActivity">
    <ImageView
        android:id="@+id/fade_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/destination_pager"
        android:layout_width="match_parent"
        android:layout_height="375dp">
    </androidx.viewpager2.widget.ViewPager2>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/destination_pager"
        android:layout_centerHorizontal="true"
        android:text="Recording System"
        android:textColor="#000"
        android:textSize="50sp"
        android:textStyle="bold" />


    <com.saintmarina.recordingsystem.ui.TimeTextView
        android:id="@+id/clock"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <TableRow
        android:id="@+id/button_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_below="@id/clock">

        <Button
            android:id="@+id/btnStart"
            android:text="Start"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_margin="30dp" />

        <Button
            android:id="@+id/btnPause"
            android:text="Pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="30dp" />
    </TableRow>

    <com.saintmarina.recordingsystem.ui.SoundVisualizer
        android:id="@+id/soundVisualizer"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/button_row"/>

    <com.saintmarina.recordingsystem.ui.StatusIndicator
        android:id="@+id/statusIndicator"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/soundVisualizer"
        />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_below="@+id/soundVisualizer"
        android:layout_toEndOf="@+id/statusIndicator" />
</RelativeLayout>